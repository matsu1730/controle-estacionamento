@model Cliente

<div class="mx-auto form-group">
    <label asp-for="Nome">Nome</label>
    <input asp-for="Nome" placeholder="Digite o nome" class="form-control" required />
</div>
<div class="mx-auto form-group">
    <label asp-for="DataEntrada">Data de Entrada</label>
    <input asp-for="DataEntrada" type="date" class="form-control" />
</div>
<div class="mx-auto form-group">
    <label asp-for="Placa">Placa do Carro</label>
    <input asp-for="Placa" placeholder="Digite a placa" class="form-control" required />
</div>
<div class="mx-auto form-group">
    <label asp-for="CorCarro">Cor do carro</label>
    <select asp-for="CorCarro" class="form-control"
            asp-items="@Html.GetEnumSelectList<CorCarro>()">
        <option>Selecione</option>
    </select>
</div>

<style>
    label {
        color: #FF512F;
    }

    body{
        width: 100%;
        margin-top: 80px;
    }
</style>